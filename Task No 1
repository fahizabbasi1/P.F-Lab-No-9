#include <iostream>
using namespace std;

int main() {
 
    int arr[4][4];
    
   
    cout << "Enter the values for a 4x4 matrix:" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << "Enter value for position [" << i << "][" << j << "]: ";
            cin >> arr[i][j];
        }
    }

  
    cout << "\nThe 4x4 matrix is:" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl;  
    }

    return 0;
}
