#include <iostream>
using namespace std;

int main() {

    int arr[3][4];
    
   
    cout << "Enter the values for a 3x4 matrix:" << endl;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 4; j++) {
            cout << "Enter value for position [" << i << "][" << j << "]: ";
            cin >> arr[i][j];
        }
    }

    
    cout << "\nThe 3x4 matrix is:" << endl;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 4; j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl; 
    }

    return 0;
}
